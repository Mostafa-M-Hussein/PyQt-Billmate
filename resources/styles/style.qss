QWidget {
    font: bold 15pt "Calibri"  ;


}



/* -------------------------- Table Widget ---------------------------------------------------------------------- */
QTableWidget
{
    font: bold 11pt "Arial";

}

QTableWidget::item {
        color : black ;



    }



QTableWidget::item::selected {
        border: 1px solid #ddd ;
        color : black ;
    }


QTableWidget::item:hover {
    background-color: #e0e0e0;
    color : white ;
    }



QTableWidget QTableCornerButton::section {
    background-color: #262626 ;
    border: 1px solid #8f8f91;
}


/* -------------------------------------------- Header View ---------------------------------------------------------- */

QHeaderView::section {
	background-color: #36304A;
    color: white;
    padding: 10px;
    font: bold 11pt "Calibri";
    border: 1px solid #dddddd ;
	border-radius : 4px;
}



/* --------------------------------------------ScrollBar---------------------------------------------------------- */
QScrollBar:horizontal {
    border: 1px solid #d4d4d4;
    background: #f9f9f9;
    height: 15px;
    margin: 0px 20px 0 20px;
}
QScrollBar::handle:horizontal {
    background: #c0c0c0;
    min-width: 20px;
}
QScrollBar::add-line:horizontal {
    border: 1px solid #d4d4d4;
    background: #d3d7df;
    width: 20px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: 1px solid #d4d4d4;
    background: #d3d7df;
    width: 20px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}


/* -------------------------------------------------Combo Box ----------------------------------------------------- */


QComboBox
{
    border: 2px solid #CCCCCC;
    padding : 0;


}




QComboBox QAbstractItemView {
    border: 1px solid #CCCCCC;
    background-color: white;
    selection-background-color: #E6F3FF;
    selection-color: #333333;
    outline: none;
}

/* Individual items in dropdown */
QComboBox QAbstractItemView::item {
    padding: 5px 10px;
    min-height: 24px;
}


/* --------------------------------------------QTextEdit---------------------------------------------------------- */

QTextEdit {
	   border : 1px solid rgb(108, 72, 115) ;
	font: 11pt "Arial";
	font-weight : bold ;
border-radius : 7px ;
margin : 5px ;
padding : 1px ;
align-text  : center   ;
}



/* --------------------------------------------QPushButton---------------------------------------------------------- */

QPushButton#searchBtn
{

border : 1px solid rgb(108, 72, 115) ;
border-radius : 7% ;
}

QPushButton#searchBtn:pressed
{

border : 1px solid rgba(108, 72, 115 , 0.5) ;
background-color : rgba(125, 125, 125 , 0.4 ) ;
}



/* --------------------------------------------QTabWidget---------------------------------------------------------- */




QTabWidget::pane
{
    	 border : 1px solid qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 rgba(181, 92, 160, 255), stop:1 rgba(255, 255, 255, 255)) ;
    	 border-radius : 3% ;
}



QTabWidget::tab-bar
{
	alignment : right     ;
}

QTabBar
{
	font: 11pt "Ravie";
	font-weight : bold ;
}

QTabBar::tab {
	margin-top : 10px;
	background-color : #36304A ;
	color :  rgb(157, 157, 157)   ;
	padding : 5px ;
	border : 1px solid transparent    ;
	border-radius : 3%;
}

QTabBar::tab::selected {
	background-color : #6A5ACD ;
	color : white   ;
}



QTabBar::tab:hover {


}

/* --------------------------------------------QSplitter---------------------------------------------------------- */

QSplitter::handle {
        background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 rgba(181, 92, 160, 255), stop:1 rgba(255, 255, 255, 255)) ;
        width: 1px; /* For vertical orientation */
        height: 1px; /* For horizontal orientation */
    }



QDateEdit {
        background-color: #f0f0f0;
        border-radius: 5px;
}


/* --------------------------------------------QMenu---------------------------------------------------------- */


QMenu {
    font: bold 11pt "Calibri";
    color: black ;               /* Text color */
    padding: 4px;               /* Spacing inside the menu */
}

QMenu::item {
    padding: 5px 25px 5px 20px;  /* Top, Right, Bottom, Left padding */
    margin: 2px;                 /* Spacing between items */
}







QMenu::indicator {             /* Submenu arrow */
    width: 12px;
    height: 12px;
}

QMenu::indicator:non-exclusive:checked {
    image: url(checked_arrow.png);  /* Custom submenu arrow */
}


